<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:drawableTint="@color/blue"
        android:layout_margin="20dp"
        android:background="@null"
        android:id="@+id/btn_return"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:id="@+id/ll_top">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:background="@drawable/background_circle_shape"
            android:src="@drawable/ic_home_foreground"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            app:tint="@color/white"
            android:id="@+id/iv_topIcon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Janis Strautins"
            android:textSize="18dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/allmostWhite"
            android:id="@+id/tv_topName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="+371 232 456 34"
            android:textSize="16dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/allmostWhite"
            android:id="@+id/tv_topPhone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:text="PERSONAL DATA:"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:textColor="@color/allmostWhite"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_infoName"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_topPhone"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/rl_contactInfo">



            <!--Nosaukumi        -->
            <LinearLayout
                android:id="@+id/ll_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">


                <TextView
                    android:id="@+id/tv_idName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="60dp"
                    android:drawableLeft="@drawable/ic_id_foreground"
                    android:drawableTint="@color/blue"
                    android:fontFamily="@font/roboto"
                    android:text="ID"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tv_genderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="60dp"
                    android:drawableLeft="@drawable/ic_gender_foreground"
                    android:drawableTint="@color/blue"
                    android:text="GENDER"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/tv_addressName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/ic_address_foreground"
                    android:drawableTint="@color/blue"
                    android:text="ADDRESS"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tv_homeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/ic_home_foreground"
                    android:drawableTint="@color/blue"
                    android:text="HOME"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tv_officeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/ic_office_foreground"
                    android:drawableTint="@color/blue"
                    android:text="OFFICE"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <!--Info        -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="120dp"
                android:id="@+id/ll_gender">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C-200"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/allmostWhite"
                    android:id="@+id/tv_id"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/allmostWhite"
                    android:id="@+id/tv_gender"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXCCC  XXCXXXXC"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/allmostWhite"
                    android:id="@+id/tv_address"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_phone"
                    android:text="+371 234 562 23"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/allmostWhite"
                    android:id="@+id/tv_home"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_home"
                    android:text="+371 280 456 00"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/allmostWhite"
                    android:id="@+id/tv_office"/>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll_top"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Favorite Artists"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/allmostWhite"
        android:textStyle="bold|italic"
        android:id="@+id/tv_artist"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_artist"
        android:layout_margin="10dp"
        android:id="@+id/rv_artist"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rv_artist"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Favorite Songs"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/allmostWhite"
        android:textStyle="bold|italic"
        android:id="@+id/tv_songs"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_songs"
        android:layout_margin="10dp"
        android:id="@+id/rv_songs"/>




</androidx.constraintlayout.widget.ConstraintLayout>